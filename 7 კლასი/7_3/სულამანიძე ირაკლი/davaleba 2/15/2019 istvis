 1. 
n = input ("ორნიშნა რიცხვი: ")
n = int (n)
k = n%10+(n//10)
print (n," ის ციფრთა ჯამია ",k)

2. 
n = input ("სამნიშნა რიცხვი :")
n = int (n)
print (n, " ის ციფრთა ჯამია ", n//100+((n//10)%10)+n%10)
3. 
n = input (" რიცხვი :")
n = int (n)
z = n
ans = 0
while n>0 :
    ans+=n%10
    n//=10

print (z,"ის ციფრთა ჯამია ", ans)
